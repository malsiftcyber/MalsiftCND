# MalsiftCND Configuration

# Application
APP_NAME=MalsiftCND
VERSION=1.0.0
DEBUG=false
SECRET_KEY=your-secret-key-here-must-be-at-least-32-characters-long
JWT_SECRET_KEY=your-jwt-secret-key-here-must-be-at-least-32-characters-long

# Database
DATABASE_URL=postgresql://malsift:malsift@localhost:5432/malsift

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["*"]

# SSL/TLS (optional)
SSL_KEYFILE=
SSL_CERTFILE=

# Authentication
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# MFA
MFA_ISSUER_NAME=MalsiftCND

# Scanning
DEFAULT_SCAN_TIMEOUT=300
MAX_CONCURRENT_SCANS=10
SCAN_THROTTLE_RATE=100

# AI/LLM APIs (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=

# External Integrations (optional)
RUNZERO_API_KEY=
RUNZERO_BASE_URL=https://api.runzero.com/v1.0

TANIUM_API_KEY=
TANIUM_BASE_URL=

ARMIS_API_KEY=
ARMIS_BASE_URL=

# Active Directory (optional)
AD_SERVER=
AD_DOMAIN=
AD_USERNAME=
AD_PASSWORD=

# Azure AD (optional)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Storage
DATA_DIR=./data
LOGS_DIR=./logs
CERTS_DIR=./certs
